{
  "name": "bellplanet",
  "version": "1.0.0",
  "description": "让孩子快乐的编程创造",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "bellcode",
  "license": "ISC",
  "devDependencies": {
    "electron": "7.1.5",
    "electron-builder": "^21.2.0"
  },
  "build": {
    "productName": "bellplanet",
    "appId": "org.egret.launcher.ymbl",
    "copyright": "bellcode",
    "directories": {
      "output": "build"
    },
    "files": [
      "./index.html",
      "./main.js",
      "./package.json",
      "dist/electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "include": "installer.nsh"
    }
  }
}