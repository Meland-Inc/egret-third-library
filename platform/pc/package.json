{
  "name": "bellplanet",
  "version": "1.0.0",
  "description": "让孩子快乐的编程创造",
  "main": "./src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "bellcode",
  "license": "MIT",
  "devDependencies": {
    "electron": "^7.1.7",
    "electron-builder": "^21.2.0"
  },
  "build": {
    "productName": "bellplanet",
    "asar": false,
    "appId": "org.egret.launcher.bellplanet",
    "copyright": "Copyright © 2020 bellcode",
    "files": [
      "./src/**/*",
      "./resource/**/*",
      "./package.json",
      "./package/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "signingHashAlgorithms": [
        "sha256",
        "sha1"
      ],
      "signDlls": true,
      "rfc3161TimeStampServer": "http://timestamp.digicert.com",
      "certificateFile": "bellplanet.pfx",
      "certificatePassword": "bellcode123",
      "icon": "./icon/icon.ico",
      "requestedExecutionLevel": "highestAvailable"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "./icon/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "./icon/icon.ico",
      "uninstallerIcon": "./icon/icon.ico",
      "include": "installer.nsh"
    },
    "extends": null
  },
  "dependencies": {
    "adm-zip": "^0.4.13",
    "request": "^2.88.0"
  }
}